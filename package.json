{
  "name": "homepage-server",
  "description": "app that fetches definitions and various items related to a search word",
  "version": "1.0.0",
  "engines": {
    "node": "8.9.x",
    "yarn": "1.6.0"
  },
  "main": "index.js",
  "author": "David Moore",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "heroku-postbuild": "cd client/ && yarn install && yarn install && npm run build",
    "server": "nodemon server.js",
    "start": "node index.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "http": "^0.0.0",
    "request": "^2.85.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "concurrently": "^3.5.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidimoore/async-word-search.git"
  }
}
